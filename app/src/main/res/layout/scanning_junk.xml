<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:orientation="vertical">


        <com.cacheclean.cleanapp.cacheappclean.Overided.CustomTxTReg
            android:textSize="18sp"
            android:textStyle="normal"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:id="@+id/name"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:text="Junk Cleaner"
            android:layout_height="?attr/actionBarSize" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="-40dp"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/shadow"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/rounded_junk_shadow" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/radar_bg" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/scan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_55sdp"
                android:paddingTop="@dimen/_60sdp"
                app:indicatorColor="#5ab3fb"
                app:indicatorName="BallScaleMultipleIndicator" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/scan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_150sdp"
                android:paddingTop="130dp"
                app:indicatorColor="#5ab3fb"
                app:indicatorName="BallScaleMultipleIndicator" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/scan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_90sdp"
                android:paddingTop="150dp"
                app:indicatorColor="#5ab3fb"
                app:indicatorName="BallScaleMultipleIndicator" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/scan4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_170sdp"
                android:paddingTop="@dimen/_60sdp"
                app:indicatorColor="#5ab3fb"
                app:indicatorName="BallScaleMultipleIndicator" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/scan5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_120sdp"
                android:paddingTop="12dp"
                app:indicatorColor="#5ab3fb"
                app:indicatorName="BallScaleMultipleIndicator" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/scan6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_130sdp"
                android:paddingTop="120dp"
                app:indicatorColor="#5ab3fb"
                app:indicatorName="BallScaleMultipleIndicator" />

            <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                app:rb_color="@color/txt_blue"
                app:rb_duration="3000"
                app:rb_radius="18dp"
                app:rb_rippleAmount="4"
                app:rb_scale="6">

                <ImageView
                    android:id="@+id/centerImage"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_centerInParent="true"
                    android:clickable="true" />
            </com.skyfishjy.library.RippleBackground>

            <ImageView
                android:id="@+id/front"
                android:layout_width="190dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/cpu_cooling_redar" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shadow"
                android:layout_centerHorizontal="true">

                <com.cacheclean.cleanapp.cacheappclean.Overided.CustomTxTReg

                    android:id="@+id/scanning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Scanning"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/spin_kit"
                    style="@style/SpinKitView.Large.ThreeBounce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/scanning"
                    android:paddingLeft="-15dp"
                    android:paddingTop="@dimen/_7sdp"
                    app:SpinKit_Color="#FFFFFF" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <com.cacheclean.cleanapp.cacheappclean.Overided.CustomTxtSem
            android:id="@+id/files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="-5dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/main_text_clr"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#32000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-10dp"
        android:layout_weight="3.5">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:scrollbars="vertical" />

    </LinearLayout>


</LinearLayout>